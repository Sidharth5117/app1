
<%= form_with(model: @event, local: true) do |form| %>
<div class="ui raised very padded text container segment">
<h2 class="ui green header">
Submit a New Event 
</h2>
<br>

<div class="field">

<%= form.label :category_id %>&nbsp;<%= form.collection_select :category_id, Category.all, :id, :name %>

</div>

<br>


<div class="field">
          <label>Event Name</label><br>
          <div class="ui left icon input">
           <%= form.text_field :event_name,placeholder: "Give your event a name" %>
            <i class="id card icon"></i>
          </div>
        </div>
<br>


<div class="field">
          <label>Event Date</label><br>
          <%= form.text_field :event_date, placeholder: "Pick Date" %>
 <i class="calendar icon"></i>  
      </div>
</div>
</div>



</div>


<% end %>
