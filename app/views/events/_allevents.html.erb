<div class="ui container">
<center>
<table class="ui inverted black celled table">
  <thead>

   <tr>
<th>Sr No</th>
<th>Event Name</th>
    <th>Event Date</th>
    <th>Category</th>
    <th>Options</th>

  </tr></thead>
  <tbody>

<% @count = 0 %>
<% @events.each do |event| %>
    <tr>
<%= @count += 1 %>
     <td data-label="Sr No"><%= @count %></td>
      <td data-label="Event Name"><%= event.event_name %></td>
      <td data-label="Event Date"><%= event.event_date %></td>
      <td data-label="Category"><%= event.category.name %></td>
      <td data-label="Options">
<%= link_to "Details",  event_path(event), class: "ui blue button" %>&nbsp;&nbsp;<%= link_to "Location",  "http://#{event.gmaps_link}" , :target => "_blank" , class: "ui green button" %><br>

     </td>
   </tr>



<% end %>

  </tbody>
</table>
</center>
</div>
