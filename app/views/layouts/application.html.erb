<!DOCTYPE html>
<html>
  <head>
    <title>Galookup</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
<%= javascript_include_tag "https://maps.googleapis.com/maps/api/js?libraries=places&key=#{ENV['GOOGLE_API_SERVER_KEY']}" %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
<%= render 'layouts/nav' %>    
<center>
<div class="ui container">

<% if notice %>

<a class="ui green tag label"><p class="notice"><%= notice %></p></a>
<% end %>
<% if alert %>
<a class="ui green tag label"><p class="alert"><%= alert %></p></a>
<% end %>
</div>
</center>
<%= yield %>
    
  </body>
</html>
