

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<br>
<div class="ui raised very padded text container segment">

<h2 class="ui green header">
Edit your Account
</h2>

<div class="field">
          <label>First Name</label>&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
&nbsp;&nbsp;&nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
&nbsp;&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp; &nbsp;
<label>Last Name</label>
<br>


<div class="ui input">          
           <%= f.text_field :first_name, autofocus: true,placeholder: "Enter First Name" %>
&nbsp;&nbsp; &nbsp; &nbsp; &nbsp; &nbsp;&nbsp; &nbsp; &nbsp; &nbsp;
<%= f.text_field :last_name, autofocus: false,placeholder: "Enter Last Name" %>
</div>
          
        </div>


<br>


<div class="field">
          <label>Email</label><br>
          <div class="ui left icon input">
           <%= f.email_field :email, autofocus: true,placeholder: "Enter Email", autocomplete: "email" %>
            <i class="user icon"></i>
          </div>
<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>                                                                                                                                             <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>                                                                                                                                 <% end %> 
        </div>




<br>

<div class="field">
          <label>Password <em>(Leave blank if don't wish to change)</em></label><br>
          <div class="ui left icon input">

<%= f.password_field :password,placeholder: "Enter Password", autocomplete: "new-password" %> 
            <i class="lock icon"></i>
          </div>
        </div>


<br>

<div class="field">
          <label>Password</label><br>
          <div class="ui left icon input">
 <%= f.password_field :password_confirmation,placeholder: "Confirm Password", autocomplete: "new-password" %>
            <i class="lock icon"></i>
          </div>
        </div>

<br>




<div class="field">                                                                                                                                                                                                         
 <label>Password<i>(we need your current password to confirm your changes)</i></label><br>
          <div class="ui left icon input">
    <%= f.password_field :current_password, autocomplete: "current-password" %>
            <i class="lock icon"></i>
          </div>                                                                                                                                                                                                           </div>                                                                                                                                                                                                                                                                                                                                                                                                                        <br> 

<br>


<div class="actions">  
    <%= f.submit "Update", class: 'ui primary button' %>
  </div>

<br>
<% end %>


<h3>Cancel my account</h3>

<p>Unhappy?<br> <%= button_to "Cancel my account", registration_path(resource_name),class: 'ui red button', data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>



</div>

